<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.css" rel="stylesheet" />

    <link rel="import" href="/stylesheets/notiflix.css">

</head>

<body style="background-color: #f4f5f9;">
    <style>
        .nav-pills .nav-link.active {
            background-color: #39C0ED;
          }
    </style>
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.11.0/mdb.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/javascripts/notiflix-aio.js"></script>

    <div class="container-fluid min-vh-100 py-2 d-flex align-items-center justify-content-center bg-primary bg-opacity-75">
        <!-- Pills navs -->
        <div class="todo p-5 border shadow-5 bg-light">
            <div class="text-center mb-2">LOOGO</div>

            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" href="#pills-login" role="tab"
                        aria-controls="pills-login" aria-selected="true">Iniciar</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="tab-register" data-mdb-toggle="pill" href="#pills-register" role="tab"
                        aria-controls="pills-register" aria-selected="false">Registrarse</a>
                </li>
            </ul>
            <!-- Pills navs -->
    
            <!-- Pills content -->
            <div class="tab-content">
                <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                    <form autocomplete="off" onsubmit="iniciar(event, this)" method="post" action="/sesiones/iniciar">
    
                        <p class="text-center">Inicia sesion:</p>
    
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="email" id="loginName" class="border border-primary form-control" />
                            <label class="form-label" for="loginName">Correo</label>
                        </div>
    
                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" id="loginPassword" class="border border-primary form-control" />
                            <label class="form-label" for="loginPassword">Contrase単a</label>
                        </div>
    
                        <!-- 2 column grid layout -->
                        <div class="row mb-4">
                            <div class="col-md-6 d-flex justify-content-center">
                                <!-- Checkbox -->
                            </div>
    
                            <div class="col-md-6 d-flex justify-content-center">
                                <!-- Simple link -->
                                <!-- <a href="#!">Olvide la contrase単a</a> -->
                            </div>
                        </div>
    
                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-4">Iniciar Sesion</button>
    
                    </form>
                </div>
                <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
                    <form autocomplete="off" action="/sesiones/crear" method="post" onsubmit="crear(event,this)">
    
                        <p class="text-center">Rellena tus datos:</p>
    
                        <!-- Name input -->
                        <div class="form-outline mb-4">
                            <input type="text" id="registerName" class="border border-primary form-control" />
                            <label class="form-label" for="registerName">Nombre</label>
                        </div>
    
                        <!-- Username input -->
                        <div class="form-outline mb-4">
                            <input type="text" id="registerUsername" class="border border-primary form-control" />
                            <label class="form-label" for="registerUsername">Apellido</label>
                        </div>
    
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="email" id="registerEmail" class="border border-primary form-control"/>
                            <label class="form-label" for="registerEmail">Correo</label>
                        </div>
    
                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" id="registerPassword" class="border border-primary form-control" />
                            <label class="form-label" for="registerPassword">Contrase単a</label>
                        </div>
    
                        <!-- Repeat Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" id="registerRepeatPassword" class="border border-primary form-control" />
                            <label class="form-label" for="registerRepeatPassword">Repetir Contrase単a</label>
                        </div>
    
                        <!-- Checkbox -->
    
                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-3">Registrarse</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- Pills content -->
    </div>

    <script src="/javascripts/sesiones.js"></script>
</body>

</html>